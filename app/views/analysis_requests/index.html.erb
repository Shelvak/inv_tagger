<% if @analysis_requests.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= AnalysisRequest.human_attribute_name 'enrolle_code' %></th>
            <th><%= AnalysisRequest.human_attribute_name 'product_code' %></th>
            <th><%= AnalysisRequest.human_attribute_name 'variety_code' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @analysis_requests.each do |analysis_request| %>
            <tr>
              <td><%= analysis_request.enrolle %></td>
              <td><%= analysis_request.product %></td>
              <td><%= analysis_request.variety %></td>
              <td><%= link_to_show analysis_request %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@analysis_requests) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.analysis_requests.new', default: :'label.new'),
    new_analysis_request_path, class: 'btn btn-primary'
  ) if can? :create, AnalysisRequest %>
</div>
